{
  "name": "versionpress-dev-workspace",
  "version": "1.0.0",
  "description": "VersionPress development workspace",
  "main": "gulpfile.js",
  "author": "VersionPress",
  "license": "GPL",
  "scripts": {
    "init-dev": "gulp init-dev",
    "init-phpstorm": "gulp idea",
    "build": "gulp build",
    "start": "docker-compose up -d wordpress",
    "tests:unit": "docker-compose run --rm tests ../vendor/bin/phpunit -c phpunit.xml --testsuite Unit",
    "tests:full": "docker-compose run --rm tests-with-wordpress",
    "stop": "docker-compose stop",
    "stop-and-cleanup": "docker-compose down -v && rm -rf ./dev-env/wp",
    "build-images": "npm run __build-wp-image && npm run __build-wp-cli-image",
    "__build-wp-image": "docker build --pull -t versionpress/wordpress dev-env/wordpress-image",
    "__build-wp-cli-image": "docker build --pull -t versionpress/wordpress:cli dev-env/wordpress-cli-image",
    "postinstall": "npm run init-dev"
  },
  "engines": {
    "node": ">= 8.1",
    "npm": ">= 5"
  },
  "dependencies": {},
  "devDependencies": {
    "archiver": "~1.1.0",
    "chalk": "^1.1.1",
    "del": "^3.0.0",
    "gulp": "~3.9.0",
    "gulp-composer": "^0.4.0",
    "gulp-git": "^2.4.1",
    "gulp-help": "^1.6.1",
    "gulp-remove-lines": "^0.1.0",
    "gulp-rename": "~1.2.0",
    "gulp-replace": "^0.6.1",
    "gulp-shell": "^0.6.3",
    "gulp-zip": "^4.0.0",
    "merge-stream": "^1.0.0",
    "run-sequence": "^1.1.5",
    "shelljs": "^0.7.8",
    "through2": "~2.0.1",
    "yamljs": "^0.2.6"
  }
}
